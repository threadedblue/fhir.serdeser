<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="org.emfjson.jackson.module" level="TRACE" />
    <logger name="org.hl7.fhir.emf" level="TRACE" />

    <!-- Set Root Logger to TRACE -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>
